{
  "name": "@liting-yes/vue-repl",
  "version": "0.4.0",
  "private": false,
  "description": "Vue component for editing Vue components",
  "author": "liting-yes <luz.liting@gmail.com> (https://liting.ink/)",
  "license": "MIT",
  "homepage": "https://github.com/liting-yes/vue-repl#vuerepl",
  "repository": {
    "type": "git",
    "url": "https://github.com/liting-yes/vue-repl.git"
  },
  "bugs": {
    "url": "https://github.com/liting-yes/vue-repl/issues"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "exports": {
    ".": {
      "types": "./dist/vue-repl.d.ts",
      "require": "./dist/ssr-stub.js",
      "import": "./dist/vue-repl.js"
    },
    "./style.css": "./dist/style.css",
    "./dist/style.css": "./dist/style.css"
  },
  "main": "dist/ssr-stub.js",
  "module": "dist/vue-repl.js",
  "types": "dist/vue-repl.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite -c ./vite.config.demo.ts",
    "build:demo": "vite build -c ./vite.config.demo.ts",
    "build": "vite build",
    "build-types": "vue-tsc -p tsconfig.build.json && api-extractor run -c api-extractor.json && rimraf dist/src",
    "prepublishOnly": "npm run build && npm run build-types",
    "lint": "eslint . --ignore-path .gitignore",
    "format": "eslint --fix . --ignore-path .gitignore",
    "commit": "git add . && git-cz",
    "release": "bumpp && pnpm publish",
    "prepare": "npx simple-git-hooks"
  },
  "peerDependencies": {
    "vue": "^3.2.13"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.39.5",
    "@babel/types": "^7.15.6",
    "@codemirror/commands": "^6.2.4",
    "@codemirror/lang-css": "^6.2.0",
    "@codemirror/lang-html": "^6.4.4",
    "@codemirror/lang-javascript": "^6.1.9",
    "@codemirror/lang-vue": "^0.1.2",
    "@codemirror/state": "^6.2.1",
    "@codemirror/theme-one-dark": "^6.1.2",
    "@codemirror/view": "^6.13.0",
    "@commitlint/cli": "^17.6.5",
    "@commitlint/config-conventional": "^17.6.5",
    "@commitlint/cz-commitlint": "^17.5.0",
    "@microsoft/api-extractor": "^7.34.4",
    "@types/codemirror": "^5.60.2",
    "@types/node": "^18.15.3",
    "@vitejs/plugin-vue": "^4.1.0",
    "bumpp": "^9.1.1",
    "codemirror": "^6.0.1",
    "commitizen": "^4.3.0",
    "consola": "^3.1.0",
    "eslint": "^8.42.0",
    "fflate": "^0.7.3",
    "hash-sum": "^2.0.0",
    "inquirer": "8",
    "lint-staged": "^13.2.2",
    "rimraf": "^3.0.2",
    "simple-git-hooks": "^2.8.1",
    "sucrase": "^3.29.0",
    "typescript": "^4.9.5",
    "vite": "^4.2.0",
    "vue": "^3.2.47",
    "vue-tsc": "^1.2.0"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix --ignore-path .gitignore"
  }
}
